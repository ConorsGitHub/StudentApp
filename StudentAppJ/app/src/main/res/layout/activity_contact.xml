<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/img_5"
    tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/header"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="campus news"
                android:textAlignment="center"
                android:textSize="35dp" />
            <TextView
                android:id="@+id/a1title"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Student robbed at local club"
                android:textAlignment="center"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/a1article"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="A university student was robbed of their belongings while attending a club event, highlighting concerns over safety in nightlife establishments."
                android:textAlignment="center"
                android:textColor="@color/idk2"
                android:textSize="15dp" />
            <Button
                android:id="@+id/readmore1"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Read More"
                />
            <TextView
                android:id="@+id/a2title"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Local rapper vishnu babu performing at popworld!"
                android:textAlignment="center"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/a2article"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="
        Yo, it's Vishnu from Reading, studying code with precision,
        In the world of Computer Science, I'm on a mission,
        From algorithms to AI, I'm on top of my game,
        In this digital domain, I'm building my name."
                android:textAlignment="center"
                android:layout_marginTop="-10dp"
                android:textColor="@color/idk2"
                android:textSize="15dp" />
            <Button
                android:id="@+id/readmore2"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:text="Read More" />
            <TextView
                android:id="@+id/a3title"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="New Course at University of Reading starting soon"
                android:textAlignment="center"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/a3article"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Learn more about the course of wearing blue jeans and white shirts here"
                android:textAlignment="center"
                android:layout_marginTop="-10dp"
                android:textColor="@color/idk2"
                android:textSize="15dp" />
            <Button
                android:id="@+id/readmore3"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:text="Read More" />
            <TextView
                android:id="@+id/a4title"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Tech speech at Polly Vacher"
                android:textAlignment="center"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/a4article"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Come by the Polly Vacher building to learn more about tech"
                android:textAlignment="center"
                android:layout_marginTop="-10dp"
                android:textColor="@color/idk2"
                android:textSize="15dp" />
            <Button
                android:id="@+id/readmore4"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:text="Read More" />
            <TextView
                android:id="@+id/a5title"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Architecture student appears to be lonely"
                android:textAlignment="center"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/a5article"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Rumour has it he is asking his friends in the library to go see him"
                android:textAlignment="center"
                android:layout_marginTop="-10dp"
                android:textColor="@color/idk2"
                android:textSize="15dp" />
            <Button
                android:id="@+id/readmore5"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:text="Read More" />
            <TextView
                android:id="@+id/a6title"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Students in the library causing havoc"
                android:textAlignment="center"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/a6article"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="The University library has been destroyed by students hooked on caffeine"
                android:textAlignment="center"
                android:layout_marginTop="-10dp"
                android:textColor="@color/idk2"
                android:textSize="15dp" />
            <Button
                android:id="@+id/readmore6"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:text="Read More" />
        </LinearLayout>
</ScrollView>

